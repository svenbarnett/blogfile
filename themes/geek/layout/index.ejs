<div class="hd logodiv">
    <div class="breadcrumb"></div>
    <p class="logot"><span class="logo_1">&lt;</span><span class="logo_2">/</span><span class="logo_3">#</span> <%= theme.logo_title %> <span class="logo_3">#</span><span class="logo_2">/</span><span class="logo_1">&gt;</span></p>
</div>
<%- partial('_partial/nav') %>
<div class="hd">
    <% var last; %>
    <% page.posts.each(function (post) { %>
        <% var year = post.date.year(); %>
        <% if (last != year){ %>
            <div class="titlex">
                <p><span class="jing">#</span>
                    <%= year %>
                </p>
            </div>
            <% last = year; %>
        <% } %>
        <div>
            <div class="list">
                <a class="post-title flink" href="<%- url_for(post.path) %>">
                    <%= post.title %>
                </a>
                <div class="post-summary">
                    <%- strip_html(post.excerpt) %>
                </div>
                <div class="post-tag">
                    <% post.tags.each(function(tag){ %>
                        <a class="post-tag__item tag-link flink" href="javascript:;"> #<%= tag.name %> </a>
                    <% }) %>
                </div>
                <div class="post-footer">
                    <a class="post-footer__left flink" href="<%- url_for(post.path) %>">
                        全文...
                    </a>
                    <div class="post-footer__right">
                        <%- full_date(post.date, 'MMMM Do') %>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        </div>
    <% }) %>
</div>